<h1>List</h1>

<h2><%= @list.name %></h2>
<ul>
<% @list.bookmarks.each do |bookmark| %>
<li>
<%= bookmark.movie.title %>
<%= link_to "Delete movie from list", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

</li>
<% end %>
</ul>
<p> <%= link_to "Add new movie to list", new_list_bookmark_path(@list) %> </p>
